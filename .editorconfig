root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml, yaml}]
indent_size = 2

[{*.css, *.scss}]
indent_size = 2

[*.sass]
indent_style = tab
tab_width = 2

[*.js]
indent_size = 2

[*.blade.php]
indent_size = 2

[{*.pug, *.jade}]
indent_size = 2
indent_style = tab

[*.vue]
indent_size = 2

[{composer.lock, .babelrc, .stylelintrc, .eslintrc, jest.config, *.bowerrc, *.jsb3, *.jsb2, *.json}]
indent_size = 4
