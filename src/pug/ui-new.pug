extends layouts/_base

block vars
	- var array = {title:'UI Kit'}

block content
	main.page
		.container
			.ui
				.ui-header Grid
				.ui-section
			.ui
				.ui-header Colors
				.ui-section
					.ui-title Template Colors
					.ui-colors
						.ui-color
							.ui-color__bg(style='background: #42b983')
							.ui-color__name #42b983
							.ui-color__code $primary

					.ui-title Basic Colors
					.ui-colors
						.ui-color
							.ui-color__bg(style='background: #dc3545')
							.ui-color__name #dc3545
							.ui-color__code $danger
						.ui-color
							.ui-color__bg(style='background: #000000')
							.ui-color__name #000000
							.ui-color__code $black
						.ui-color
							.ui-color__bg(style='background: #f6f6f6')
							.ui-color__name #f6f6f6
							.ui-color__code $gray
						.ui-color
							.ui-color__bg(style='background: #FFFFFF')
							.ui-color__name #FFFFFF
							.ui-color__code $white
			.ui
				.ui-header Buttons
				.ui-section
					table
						tr
							td
								button.btn.btn--primary Primary
							td
								button.btn.btn--primary(disabled) Primary Disabled
						tr
							td
								button.btn.btn-icon.btn--primary
									span.btn-icon__text Primary
									+icon('right', 'btn-icon__icon')
							td
								button.btn.btn-icon.btn--primary(disabled)
									span.btn-icon__text Primary Disabled
									+icon('right', 'btn-icon__icon')
			.ui
				.ui-header Links
				.ui-section
					table
						tr
							td
								a.link(href='/') Base layout link
							td
								a.link.link-icon(href='/')
									span.link-icon__text Link with icon
									+icon('right', 'link-icon__icon')
			.ui
				.ui-header Inputs
				.ui-section

					.input-group(data-input-group='text')
						.input-group__name Base Text Input
						label.input-group__label
							input.input-group__input.input(
								type='text'
								name='text'
								placeholder='Text here')
						.input-group__error Error text

					.input-group(data-input-group='phone')
						.input-group__name Base Phone Input
						label.input-group__label
							input.input-group__input.input.js-input-phone(
								type='tel'
								name='phone'
								placeholder='+7')
						.input-group__error Error text

					.input-group(data-input-group='password')
						.input-group__name Base Password Input
						label.input-group__label.js-show-password
							input.input-group__input.input.js-show-password-input(
								type='password'
								name='text'
								placeholder='Password here')
							button.input-group__btn.js-show-password-btn(type='button')
								+icon('eye', 'input-group__btn-icon')
						.input-group__error Error text

			.ui
				.ui-header Forms
				.ui-section
			.ui
				.ui-header Navigation
				.ui-section
					.ui-title Bread-crumbs
					.ui-title Pagination
					.ui-title Preloader
					.ui-title
			.ui
				.ui-header Tabs
				.ui-section
			.ui
				.ui-header Sliders
				.ui-section
			.ui
				.ui-header Tables
				.ui-section
			.ui
				.ui-header Gallery
				.ui-section
			.ui
				.ui-header Typography
				.ui-section
					.ui-title Titles
						h1.title.title--h1 Page Title H1
						h2.title.title--h2 Page Title H2
						h3.title.title--h3 Page Title H3
						h4.title.title--h4 Page Title H4
						h5.title.title--h5 Page Title H5
						h6.title.title--h6 Page Title H6
					.ui-title Text
						p.text.
							Lorem ipsum dolor sit amet, consectetur adipisicing elit. Delectus eos fuga nostrum officia perspiciatis possimus quibusdam quis suscipit, veritatis voluptates.
						p.text.text--bold.
							Lorem ipsum dolor sit amet, consectetur adipisicing elit. Delectus eos fuga nostrum officia perspiciatis possimus quibusdam quis suscipit, veritatis voluptates.
						p.text.text--italic.
							Lorem ipsum dolor sit amet, consectetur adipisicing elit. Delectus eos fuga nostrum officia perspiciatis possimus quibusdam quis suscipit, veritatis voluptates.
			.ui
				.ui-header Modals
				.ui-section
					table
						tr
							td
								button.btn.btn--primary.js-open-modal(data-modal='#success-modal') Success Modal
							td
								button.btn.btn--primary.js-open-modal(data-modal='#error-modal') Error Modal
